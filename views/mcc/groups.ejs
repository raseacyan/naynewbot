<!DOCTYPE html>

<html>
<head><title>mcc</title></head>
<body>
<h1>Groups</h1>

<a href="hall">hall</a>
<ul>
<% groups.forEach(function(group){ %>
     <li><%= group.name  %></li>
<% }); %>
</ul>

<h3>Groups</h3>
<ul>
<% groups.forEach(function(group){ %>
     <li><%= group.name  %> by <%= group.created_by  %>

     	<%if(group.created_by_id != current_student.id){%>
	        <form action="joingroup" method="post">
	     		<input type="hidden" name="group_id" value="<%= group.id %>"/>
	     		<input type="hidden" name="group_name" value="<%= group.name  %>"/>
	     		<input type="hidden" name="student_id" value="<%= current_student.id  %>"/>
	     		<input type="hidden" name="student_name" value="<%= current_student.name  %>"/>
	     		<input type="submit" name="submit" value="Join"/>
	     	</form>
    	<%}%>   	
     	

     </li>
<% }); %>
</ul>
<form action="creategroup" method="post">
name: <input type="text" name="name"/>
<select name="type"> 
	<option value="5">5/5</option>
	<option value="10">10/10</option>
</select>

<input type="hidden" name="created_by_id" value="<%= current_student.id  %>"/>
<input type="hidden" name="created_by" value="<%= current_student.name  %>"/>

<input type="submit" name="submit" value="Create"/>
</form>
</body>
</html>